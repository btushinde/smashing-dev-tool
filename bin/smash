#!/usr/bin/env coffee
argv =          require('minimist')(process.argv.slice 2)
chalk =         require 'chalk'
commander =     require 'commander'
required =      require 'require-dir'

globalConfig = require '../config/global'
{logger, notify, execute} = globalConfig.util

# Configure Commander.js
commander
  .version(globalConfig.smash.pkg.version)
  .option('-v, --verbose',         'Display detailed log information')
  .option('-s, --silent',          'Hide all logs and notifications')
  .on '--help', ->
    console.log '  Examples:'
    console.log ''
    console.log '    $ smash generate app my-new-app'
    console.log '    $ smash generate component base/header'
    console.log ''


# MAIN MODULES

# App template generation/scaffolding
require('../modules/generate')(globalConfig)

# Initialization
require('../modules/init')(globalConfig)

# Compile phase
require('../modules/compile')(globalConfig)

# Build phase
require('../modules/build')(globalConfig)

# Deploy phase
require('../modules/deploy')(globalConfig)

# Test phase
require('../modules/test')(globalConfig)



# Apps
require('../modules/apps')(globalConfig)

# Documentation generation
require('../modules/document')(globalConfig)

commander.parse process.argv
commander.help()  if !commander.args.length
